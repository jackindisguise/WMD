{
	"tags": {
		"allowUnknownTags" : true
	},
	"source":{
		"include": [
			"src/lib",
			"src/mud",
			"src/mud/ability",
			"src/mud/core",
			"src/mud/factory",
			"src/mud/io",
			"src/mud/loader",
			"src/mud/manager",
			"src/mud/map",
			"src/stock/command",
			"src/stock/command/ability",
			"src/stock/ability",
			"src/util"
		]
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true,
		"default": {
			"outputSourceFiles" : true
		},
		"applicationName": "WMD",
		"disqus": "",
		"googleAnalytics": "",
		"openGraph": {
			"title": "",
			"type": "website",
			"image": "",
			"site_name": "",
			"url": ""
		},
		"meta": {
			"title": "",
			"description": "",
			"keyword": ""
		},
		"linenums": false
	},
	"markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"tags": ["examples"]
	},
	"opts": {
        "destination": "./docs/html",
        "encoding": "utf8",
		"tutorials": "./docs/tutorials",
		"template": "./node_modules/ink-docstrap/template"
	}
}